<!-- 이 XML을 어떤 interface하고 연결할 것인가 -->
<mapper namespace="kr.co.recotrip.dao.DiaryDAO">

	<select id="tdList" resultType="diary">
	
		SELECT * FROM yugae WHERE diary_public = 1 ORDER BY diary_number DESC

	</select>
		<select id="tdDetail" resultType="diary">
	
		SELECT * FROM yugae WHERE diary_number= #{idx}
	
	</select>
	 
	<insert id="tdWrite" parameterType="hashmap">
		INSERT INTO yugae (diary_number,id,diary_subject,diary_main,diary_content1,diary_reg_date,diary_public)
		 VALUES(yu_seq.nextval,#{id},#{title},#{profile},#{photoEx1},#{date},#{diary_public})
	</insert>
	
	<insert id="tdWrite2" parameterType="hashmap">
		INSERT INTO yugae (diary_number,id,diary_subject,diary_main,diary_content1,diary_content2,diary_reg_date,diary_public)
