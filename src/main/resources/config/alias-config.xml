<!-- typeAlias : DTO 경로를 축약해준다. -->
<!-- alias="사용할 이름" type="클래스 경로" -->
<!-- 
클래스 단위 등록
이 경우는 사용하는 DTO가 많아지면 설정할 내용이 많아져서 불편하다. 
<configuration>
	<typeAliases>
		<typeAlias alias="board" type="kr.co.goodee.dto.BoardDTO"/>
	</typeAliases>
</configuration>
-->


<!-- 클래스 단위 등록-->
 <configuration>
	<typeAliases>
